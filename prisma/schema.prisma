// This schema conforms to Phase 1 Ingestion Contracts
// See: .ai/contracts/phase-1-ingestion.md

generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Phase 1, 2, 3 & 4: Image Ingestion, Processing, Ownership and Projects
model Image {
  id        String      @id @default(cuid())
  status    ImageStatus
  title     String?
  
  // Phase 1: Required for ingestion
  tempPath  String      // Absolute path to temp file
  checksum  String      @unique // SHA-256 hash
  mimeType  String
  width     Int
  height    Int
  sizeBytes Int
  
  // Phase 2: Derived assets (null until generated)
  thumbnailPath   String?  // Path to generated thumbnail
  previewPath     String?  // Path to web-optimized preview
  
  // Phase 3: Ownership & Enriched Metadata
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // EXIF Enrichment (Phase 3)
  make            String?  // Camera manufacturer
  model           String?  // Camera model
  exposureTime    String?  // Shutter speed
  fNumber         Float?   // Aperture
  iso             Int?     // ISO speed
  focalLength     Float?   // Focal length
  lensModel       String?  // Lens model
  software        String?  // Software used
  dateTaken       DateTime? // Actual capture date
  lat             Float?   // GPS Latitude
  lng             Float?   // GPS Longitude
  alt             Float?   // GPS Altitude
  
  // Relations
  collections Collection[]
  jobs        Job[]
  projectImages ProjectImage[]
  albumImages AlbumImage[]
  
  // Timestamps
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  
  @@index([status])
  @@index([checksum])
  @@index([userId])
  @@index([createdAt])
}

model Collection {
  id        String   @id @default(cuid())
  name      String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  images    Image[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, userId])
  @@index([userId])
}

// Phase 3: NextAuth.js Models & RBAC
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For Credentials provider
  role          Role      @default(USER)
  
  accounts      Account[]
  sessions      Session[]
  images        Image[]
  collections   Collection[]
  projects      Project[]
  shareTokens   ShareToken[]
  notifications Notification[]
  adminTasks    AdminTask[]
  albums        Album[]
  projectAccess ProjectAccess[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Phase 4: Professional Projects
model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  
  // Storage management (in bytes)
  quotaBytes  BigInt   @default(10737418240) // 10GB default
  storageUsed BigInt   @default(0)
  
  // Ownership
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  
  // Relations
  images      ProjectImage[]
  shareTokens ShareToken[]
  accessList ProjectAccess[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([name, ownerId])
  @@index([ownerId])
}

// Project Access Control
enum AccessLevel {
  READ
  WRITE
  FULL
}

model ProjectAccess {
  id        String     @id @default(cuid())
  projectId String
  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessLevel AccessLevel @default(READ)
  
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([projectId, userId])
  @@index([projectId])
  @@index([userId])
}

// Album Model for organizing media
enum AlbumCategory {
  PHOTO_ALBUM
  COVER_PAGE
  SHORT_VIDEOS
  REELS
  SHORTS
}

model Album {
  id          String       @id @default(cuid())
  name        String
  description String?
  category    AlbumCategory @default(PHOTO_ALBUM)
  
  // Ownership
  ownerId     String
  owner       User         @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  
  // Relations
  images      AlbumImage[]
  
  coverImage  String?
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([name, ownerId])
  @@index([ownerId])
}

// Album-Image many-to-many relationship
model AlbumImage {
  id        String   @id @default(cuid())
  albumId   String
  album     Album    @relation(fields: [albumId], references: [id], onDelete: Cascade)
  imageId   String
  image     Image    @relation(fields: [imageId], references: [id], onDelete: Cascade)
  
  addedAt   DateTime @default(now())

  @@unique([albumId, imageId])
  @@index([albumId])
  @@index([imageId])
}

// Project-Image many-to-many relationship
model ProjectImage {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  imageId   String
  image     Image    @relation(fields: [imageId], references: [id], onDelete: Cascade)
  
  addedAt   DateTime @default(now())

  @@unique([projectId, imageId])
  @@index([projectId])
  @@index([imageId])
}

// Phase 4: Client Sharing
model ShareToken {
  id          String    @id @default(cuid())
  token       String    @unique
  projectId   String
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  // Token configuration
  expiresAt   DateTime?
  maxAccesses Int?
  accessCount Int       @default(0)
  
  // Metadata
  createdAt   DateTime  @default(now())
  createdById String
  createdBy   User      @relation(fields: [createdById], references: [id], onDelete: Cascade)
  
  @@index([projectId])
  @@index([token])
}

enum Role {
  USER
  PRO
  CLIENT
  ADMIN
  SUPERADMIN
}

// Notifications for admin
model Notification {
  id        String           @id @default(cuid())
  type      NotificationType
  title     String
  message   String
  status    NotificationStatus @default(UNREAD)
  read      Boolean          @default(false)
  requestor String?          // Who/what triggered the notification
  userId    String?
  user      User?            @relation(fields: [userId], references: [id], onDelete: Cascade)
  metadata  Json?
  
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  
  @@index([userId])
  @@index([read])
  @@index([status])
  @@index([createdAt])
}

enum NotificationStatus {
  UNREAD
  READ
  SNOOZED
}

// Admin Task Management
model AdminTask {
  id          String      @id @default(cuid())
  type        TaskType
  status      TaskStatus  @default(PENDING)
  priority    TaskPriority @default(MEDIUM)
  progress    Int         @default(0)
  
  // Task details
  title       String
  description String?
  payload     Json?
  result      Json?
  error       String?
  
  // Scheduling
  scheduledAt DateTime?
  startedAt   DateTime?
  completedAt DateTime?
  
  // Metadata
  createdById String?
  createdBy   User?       @relation(fields: [createdById], references: [id], onDelete: SetNull)
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@index([type])
  @@index([status])
  @@index([priority])
  @@index([scheduledAt])
}

enum TaskType {
  // Image operations
  COMPRESS_IMAGES
  EXTRACT_ARCHIVE
  OFFLINE_UPLOAD
  SYNC_STORAGE
  GENERATE_THUMBNAILS
  REGENERATE_METADATA
  
  // System operations  
  BACKUP_DATABASE
  CLEANUP_TEMP
  OPTIMIZE_STORAGE
  SYNC_USERS
}

enum TaskStatus {
  PENDING
  QUEUED
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum NotificationType {
  JOB_ERROR
  JOB_COMPLETE
  SHARE_REQUEST
  USER_REGISTERED
  QUOTA_EXCEEDED
  SYSTEM_ERROR
  ACCESS_REQUEST
}

// Phase 1 & 2: Image Lifecycle States
enum ImageStatus {
  UPLOADED   // Client finished sending bytes
  INGESTED   // Temp file written + metadata stored
  PROCESSING // Assets generation in progress
  STORED     // Original + derived assets ready
  FAILED     // Unrecoverable ingestion error
}

// Phase 2: Persistent Job Model with Locking & Retries
// See: .ai/contracts/phase-2-processing.md
model Job {
  id          String   @id @default(cuid())
  
  // Job identity
  type        String   // e.g., OFFLOAD_ORIGINAL, THUMBNAIL_GENERATION, EXIF_ENRICHMENT
  payload     String   // JSON payload
  
  // Job status lifecycle
  status      JobStatus @default(PENDING) // PENDING, RUNNING, COMPLETED, FAILED
  
  // Retry & locking
  attempts    Int      @default(0)
  maxAttempts Int      @default(3)
  lockedAt    DateTime? // When lock was acquired
  lockedBy    String?   // Process/worker ID holding lock
  lastError   String?   // Most recent error message
  
  // Association to image (for processing jobs)
  imageId     String?
  image       Image?    @relation(fields: [imageId], references: [id], onDelete: Cascade)
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([status])
  @@index([imageId])
  @@index([type])
  @@index([createdAt])
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}
